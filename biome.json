{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "src/**/*",
      "next.config.*",
      "prisma.config.*",
      "!*.json",
      "!.next/**/*",
      "!node_modules/**/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "bracketSpacing": true,
    "bracketSameLine": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noUnusedTemplateLiteral": "off",
        "noCommonJs": "error",
        "noMagicNumbers": "warn",
        "noNestedTernary": "warn",
        "noUselessElse": "error",
        "useTemplate": "error"
      },
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useButtonType": "error",
        "useValidLang": "error",
        "useHtmlLang": "error"
      },
      "complexity": {
        "noForEach": "warn",
        "noUselessCatch": "error"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedFunctionParameters": "error",
        "noUnusedImports": "error",
        "useUniqueElementIds": "off",
        "useExhaustiveDependencies": "warn"
      },
      "suspicious": {
        "noArrayIndexKey": "info",
        "noUnknownAtRules": "off",
        "noConsole": {
          "level": "error",
          "options": { "allow": ["warn", "error"] }
        },
        "noDebugger": "error",
        "noDoubleEquals": "error",
        "noDuplicateElseIf": "error",
        "useNumberToFixedDigitsArgument": "error",
        "useErrorMessage": "error",
        "noVar": "error",
        "noTsIgnore": "error",
        "noShadowRestrictedNames": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  },
  "html": {
    "formatter": {
      "selfCloseVoidElements": "always"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
