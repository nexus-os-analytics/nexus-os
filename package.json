{
  "name": "nextjs-base",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "biome check --fix ./src",
    "format": "biome format --write ./src",
    "prepare": "husky",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx prisma generate && npx prisma migrate deploy",
    "seed": "tsx ./src/lib/prisma/seed.ts",
    "inngest:dev": "npx inngest-cli@latest dev -u http://localhost:3000/api/inngest"
  },
  "dependencies": {
    "@mantine/carousel": "^8.3.2",
