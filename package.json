{
  "name": "nexus-os",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "predev": "next typegen",
    "dev": "next dev --turbopack",
    "prebuild": "next typegen",
    "build": "next build",
    "start": "next start",
    "lint": "biome check --fix ./src",
    "format": "biome format --write ./src",
    "prepare": "husky",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx prisma generate && npx prisma migrate deploy",
    "seed": "npx prisma db seed",
    "inngest:dev": "npx inngest-cli@latest dev -u http://localhost:3000/api/inngest"
  },
  "dependencies": {
    "@mantine/carousel": "^8.3.9",
    "@mantine/charts": "^8.3.9",
    "@mantine/code-highlight": "^8.3.9",
    "@mantine/core": "^8.3.9",
    "@mantine/dates": "^8.3.9",
    "@mantine/dropzone": "^8.3.9",
    "@mantine/form": "^8.3.9",
    "@mantine/hooks": "^8.3.9",
    "@mantine/modals": "^8.3.9",
    "@mantine/notifications": "^8.3.9",
    "@mantine/nprogress": "^8.3.9",
    "@mantine/spotlight": "^8.3.9",
    "@mantine/tiptap": "^8.3.9",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/adapter-pg": "^7.1.0",
    "@tabler/icons-react": "^3.35.0",
    "@tanstack/react-query": "^5.90.12",
    "@tiptap/extension-link": "^3.12.1",
    "@tiptap/pm": "^3.12.1",
    "@tiptap/react": "^3.12.1",
    "@tiptap/starter-kit": "^3.12.1",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "embla-carousel": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "inngest": "^3.46.0",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.553.0",
    "mantine-form-zod-resolver": "^1.3.0",
    "next": "16.0.10",
    "next-auth": "^4.24.13",
    "nextjs-routes": "^2.2.5",
    "openai": "^6.10.0",
    "otplib": "^12.0.1",
    "p-limit": "^7.2.0",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "qrcode": "^1.5.4",
    "query-string": "^9.3.1",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-hook-form": "^7.68.0",
    "recharts": "^3.5.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@prisma/client": "^7.1.0",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/qrcode": "^1.5.6",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prisma": "^7.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "biome check --write --diagnostic-level=error"
    ]
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "engineStrict": true,
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.7",
      "@types/react-dom": "19.2.3"
    }
  }
}
