    "react-hook-form": "^7.63.0",
    "recharts": "^3.2.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@prisma/client": "^6.19.0",
    "@types/node": "^20",
    "@types/pg": "^8.15.6",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prisma": "6.17.1",
    "tsx": "^4.20.6",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "biome check --write --diagnostic-level=error"
    ]
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
