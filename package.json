    "@tiptap/starter-kit": "^3.6.2",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "embla-carousel": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "inngest": "^3.45.1",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.553.0",
    "mantine-form-zod-resolver": "^1.3.0",
    "next": "15.5.2",
    "next-auth": "^4.24.11",
    "openai": "^6.8.1",
    "otplib": "^12.0.1",
    "p-limit": "^7.2.0",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "qrcode": "^1.5.4",
    "qs": "^6.14.0",
    "react": "19.1.0",
