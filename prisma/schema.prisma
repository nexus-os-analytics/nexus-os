generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  USER
  GUEST
}

model User {
  id                  String             @id @default(uuid())
  name                String
  email               String             @unique
  hashedPassword      String? // Torne opcional para usu√°rios OAuth
  role                UserRole           @default(USER)
  image               String?
  phone               String?
  acceptedTerms       Boolean            @default(false)
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  deletedAt           DateTime?
  retentionUntil      DateTime?
  twoFactorSecret     String?
  resetToken          String?
  resetTokenExpiry    DateTime?
  isTwoFactorEnabled  Boolean            @default(false)
  failedAttempts      Int                @default(0)
  onboardingCompleted Boolean            @default(false)
  lockedUntil         DateTime?
  emailVerified       DateTime? // Adicionado para NextAuth
  accounts            Account[] // Adicionado para NextAuth
  sessions            Session[] // Adicionado para NextAuth
  loginActivities     LoginActivity[]
  auditLogs           AuditLog[]
  apiKeys             ApiKey[]
  securityIncidents   SecurityIncident[]
  blingIntegration    BlingIntegration?
  userSettings        UserSettings?

  @@index([email, createdAt, deletedAt])
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String // "oauth" | "email" | "credentials"
  provider          String // "google", "github", etc.
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model AuditLog {
  id        String   @id @default(uuid())
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  action    String
  resource  String
  payload   Json?
  metadata  String?
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
}

model SecurityIncident {
  id        String   @id @default(uuid())
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  type      String
  details   String
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
}

model LoginActivity {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  successful Boolean
  ip         String
  device     String?
  geo        String?
  createdAt  DateTime @default(now())

  @@index([userId, createdAt])
}

model ApiKey {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  key       String   @unique
  scopes    String[]
  expiresAt DateTime
  createdAt DateTime @default(now())
  revoked   Boolean  @default(false)

  @@index([key, userId, createdAt])
}

model DataRegistry {
  id        String   @id @default(uuid())
  location  String
  type      String
  createdAt DateTime @default(now())

  @@index([createdAt])
}

model BlingIntegration {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Tokens OAuth
  accessToken  String   @db.Text
  refreshToken String   @db.Text
  expiresAt    DateTime
  tokenType    String
  scope        String

  // Metadados
  connectedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt

  products BlingProduct[]
  alerts   ProductAlert[]

  @@map("bling_integrations")
}

model ProductAlert {
  id            String           @id @default(uuid())
  type          AlertType
  productName   String
  sku           String
  imageUrl      String?
  category      String
  integrationId String
  integration   BlingIntegration @relation(fields: [integrationId], references: [id], onDelete: Cascade)

  // Risco de Ruptura
  daysRemaining     Int?
  stockAmount       Int?
  vvd               Float?
  replenishmentTime Int?
  safetyDays        Int?

  // Dinheiro Parado
  capitalTied       Float?
  daysSinceLastSale Int?
  lastSaleDate      DateTime?
  costPrice         Float?
  sellingPrice      Float?
  recommendedPrice  Float?
  recoveryPercent   Float?

  // Oportunidade
  salesGrowth      Float?
  vvdLast7Days     Float?
  vvdPrevious7Days Float?

  blingProductId String?
  blingProduct   BlingProduct? @relation(fields: [blingProductId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([sku, type])
}

model BlingProduct {
  id           String    @id @default(uuid())
  blingId      String    @unique
  sku          String    @unique
  name         String
  category     String?
  price        Float?
  costPrice    Float?
  imageUrl     String?
  stockAmount  Int? // novo campo
  lastSaleDate DateTime?
  lastSynced   DateTime  @default(now())

  integrationId String
  integration   BlingIntegration @relation(fields: [integrationId], references: [id], onDelete: Cascade)

  alerts ProductAlert[]
}

model BlingOrder {
  id          String   @id @default(uuid())
  blingId     String   @unique
  orderNumber String
  date        DateTime
  total       Float
  items       Json // Array de itens serializado
}

model UserSettings {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // üí∞ Financial
  capitalCost Float @default(3.0)
  storageCost Float @default(0.5)

  // ‚öôÔ∏è Operational
  defaultRestockTime Int @default(7)
  safetyDays         Int @default(3)

  // üéØ Goals
  recoveryTarget    Float @default(80.0)
  maxRecoveryPeriod Int   @default(30)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_settings")
}

enum AlertType {
  rupture
  dead_stock
  opportunity
}
